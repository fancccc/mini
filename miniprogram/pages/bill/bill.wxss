/* miniprogram/pages/bill/bill.wxss */
.right-view{
  display: flex;
  flex-direction:column;
  background-color:transparent;
  width: 10%;
  position:fixed;
  z-index:666;
  justify-content: center;
  align-items: center;
  bottom: 30rpx;
  right:30rpx;
}
.bnt-img{
  height: 95rpx;
  width: 95rpx;
}

.type-box{
  display:flex;
  flex-wrap: wrap;
  padding: 20rpx;
}
.type{
  width: 100rpx;
  height: 100rpx;
  margin: 5px;
  background-color:rgb(255, 255, 255);
  margin-top: 50rpx;
  border-radius: 8px;
}
.test{
  background-color: rgb(222, 255, 255);
}
.type-img{
  display: flex;
  width: 100rpx;
  height: 100rpx;
  align-items: center;
  justify-content: center;
}
.type-text{
  display: flex;
  text-align:start;
  color:var(--weui-FG-1);
  font-size: 11px;
  align-items: center;
  justify-content: center;
  padding-top: 20rpx;
}
.addPage{
  width: 100%;
}
.countBox{
  width: 100%;
  position: absolute;
  bottom: 110rpx;
}
.count{
  display: flex;
  flex-wrap: wrap;
  color: rgb(240, 219, 219);
}

.smallbox{
  width: 25%;
  height: 150rpx;
  color: black;
  background-color: rgb(255, 255, 255);
  display: flex;
  align-items: center;
  justify-content: center;
}

.showBill{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 96%;
  flex-wrap: wrap;
  bottom: 110rpx;
}
.top{
  background-color: aquamarine;
  align-items: center;
  justify-content: center;
}

